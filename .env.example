# Environment Configuration for WildWest Dice Bot
# Copy this file to .env and fill in your values

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_BOT_USERNAME=WILDWESTDICE_bot

# Blockchain Configuration (Base Network)
PRIVATE_KEY=your_wallet_private_key_here
BASE_RPC_URL=https://mainnet.base.org
# For testnet, use: https://sepolia.base.org

# Smart Contract Addresses (will be filled after deployment)
CONTRACT_ADDRESS=your_deployed_contract_address_here
WILDWEST_TOKEN_ADDRESS=your_wildwest_token_address_here

# Database Configuration
# Render provides DATABASE_URL for PostgreSQL automatically
# For local development with SQLite, use:
# DATABASE_URL=sqlite:./dice_bot.db

# Environment
NODE_ENV=production

# Network Configuration
NETWORK=base
# For testnet, use: base-sepolia

# Optional: Admin Configuration
ADMIN_TELEGRAM_ID=your_telegram_user_id_for_admin_features

# Render Deployment Configuration
PORT=3000

# Optional: Block Explorer API Key for contract verification
BASESCAN_API_KEY=your_basescan_api_key_here

# Game Configuration
DEFAULT_GAS_LIMIT=500000
MAX_GAME_DURATION_HOURS=24

# Security
BOT_WEBHOOK_URL=
BOT_WEBHOOK_SECRET=your_webhook_secret_here

# Database (optional - for production use)
# DATABASE_URL=postgresql://username:password@localhost:5432/dice_bot